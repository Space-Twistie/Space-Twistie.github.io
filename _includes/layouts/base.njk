<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <meta content="website" property="og:type">
    <meta content="{{ metadata.social.url }}" property="og:url">
    <meta content="{{ metadata.social.siteName }}" property="og:site_name">
    <meta content="{{ metadata.social.title }}" property="og:title">
    <meta content="{{ metadata.social.description }}" property="og:description">
    <meta content="{{ metadata.social.preview }}" property="og:image">
    <meta content="1200" property="og:image:width">
    <meta content="630" property="og:image:height">

    <meta content="{{ metadata.social.url }}" name="twitter:site">
    <meta content="summary_large_image" name="twitter:card">
    <meta content="{{ metadata.social.title }}" name="twitter:title">
    <meta content="{{ metadata.social.description }}" name="twitter:description">
    <meta content="{{ metadata.social.preview }}" name="twitter:image">

    <link href="apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300" rel="stylesheet">

    {%- css %}{% include "public/css/index.css" %}{% endcss %}

    <style>{% getBundle "css" %}</style>
  </head>
  <body>
    {% include "menu.njk" %}
    <div class="content">

      <main>
        {{ content | safe }}
      </main>

      <footer></footer>
    </div>
  </body>
</html>